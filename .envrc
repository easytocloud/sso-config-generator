# Create and activate Python virtual environment using uv
if [ ! -d ".venv" ]; then
  echo "Creating virtual environment with uv..."
  uv venv .venv
fi

export VIRTUAL_ENV=$(pwd)/.venv
PATH_add $VIRTUAL_ENV/bin

# Use AWS config and credentials from dotaws directory for testing
export AWS_CONFIG_FILE=$(pwd)/dotaws/config
export AWS_SHARED_CREDENTIALS_FILE=$(pwd)/dotaws/credentials
